<div class="materialrequest-box">
  <br/>
  
  
  {{#if isShow}}
  <div class="row ">
      <button class="mybutton" type="submit" {{action 'quotationreject'}}>Reject Quotation</button>
    </div>
    <br/>
    <br/>  <b><span style="margin-left:50%">OR</span></b>
    <br/>
    <div class="row ">
      <button class="mybutton" type="submit" {{action 'gotopo'}}>Go For Purchase Order </button>
    </div>
    {{/if}}
  {{#if showdeliveryorder}}
  <div id="header">
    <div id="cont-lock" style="text-align:center ;color:white"><h1><b>Purchase Order</b></h1></div>
    <!--<div id="bottom-head"><h1 id="logintoregister">Login</h1></div>-->
  </div> 
   <form action="" method="post">
     <div class="myformleft" align="center">
    <div class="group">  
            
       {{validated-input  type="text" model=this  valuePath='companyname' placeholder="Supplier Company Name" required=""}}
      
    </div>
	    <div class="group">      
      {{validated-input  type="text" model=this  valuePath='address' placeholder="Shpping Address" required=""}}
      
    </div> 
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='pono' placeholder="Purchase Order No" required=""}}
    </div>
    <div class="group">      
      {{validated-input  type="text" model=this  valuePath='formdate' placeholder="Date" required=""}}
      
    </div>
    <div class="group">      
      {{validated-input  type="text" model=this  valuePath='item' placeholder="Item Name" required=""}}
    </div>
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='Quantity' placeholder="Quantity" required=""}}
      
    </div>
     <div class="row">
    {{#pl-uploader  for="upload_file" runtimes="html5 flash silverlight" onfileadd="uploadDoc" as |queue|}}
          <a id="upload_file" style="font-size:14px">Upload File</a>
         {{/pl-uploader}}
    </div>
      
    </div>
    
  <div class="row ">
      <button class="mybutton" type="submit" {{action 'submitrequest'}}>Submit</button>
    </div>  
  </form>
  {{/if}}
</div>
{{#if ShowingModalrequest}}
{{#modal-dialog close="submitdetails" targetAttachment="center" translucentOverlay=true}}
                 <h3>Purchase Order Submitted Sucessflly... !</h3>
                            <div class="modal-header">
                                    <button type="button" class="close" {{action "okbutton" }}>ok</button>
                            </div>
 {{/modal-dialog}}
 {{/if}}
