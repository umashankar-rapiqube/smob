<div class="materialrequest-box">
  <div id="inner-form-header">
    <div id="cont-lock" style="text-align:center ;color:white"><h1><b>Payment Order</b></h1></div>
    <!--<div id="bottom-head"><h1 id="logintoregister">Login</h1></div>-->
  </div> 
  <br/>
   <form action="" method="post">
     <div class="myformleft" align="center">
    <div class="group">  
            
       {{validated-input  type="text" model=this  valuePath='paymentTocompany' placeholder="Payment To" required=""}}
      
    </div>
	    
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='paymentDate' placeholder="Payment date" required=""}}
      
    </div>
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='paymentorderNo' placeholder="Payment Order NO" required=""}}
      
    </div>
    
     {{!-- <div class="myformright"> --}}
     
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='Item' placeholder="Item Name" required=""}}
      
    </div>
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='Quantity' placeholder="Quantity" required=""}}
      
    </div>
     <div class="row ">
      <button class="mybutton" type="submit" {{action 'submitdetails'}}>submit</button>
    </div> 
     </div>
    {{!-- </div> --}}
   
  </form>
 </div> 
