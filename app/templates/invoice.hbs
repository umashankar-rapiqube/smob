<div class="materialrequest-box">
  {{#if isShowinvoice}}
  <div id="inner-form-header">
    <div id="cont-lock" style="text-align:center ;color:white"><h1><b> Invoice</b></h1></div>
    <!--<div id="bottom-head"><h1 id="logintoregister">Login</h1></div>-->
  </div> 
  <br/>
   <form action="" method="post">
     <div class="myformleft" align="center">
    <div class="group">  
            
       {{validated-input  type="text" model=this  valuePath='companyname' placeholder="Invoice To" required=""}}
      
    </div>
	    <div class="group">      
      {{validated-input  type="text" model=this  valuePath='address' placeholder="Delivery  Address" required=""}}
      
    </div>
      <div class="group">      
      {{validated-input  type="text" model=this  valuePath='invoiceNo' placeholder="Invoice Number" required=""}}
    </div>
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='formdate' placeholder="Invoice Date" required=""}}
    </div>
      
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='item' placeholder="Item Name" required=""}}
      
    </div>
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='Quantity' placeholder="Quantity" required=""}}
      
    </div>
    <div class="group">      
      {{validated-input  type="text" model=this  valuePath='totalamount' placeholder="Total Amount" required=""}}
      
    </div>
    <div class="row">
    {{#pl-uploader  for="upload_file" runtimes="html5 flash silverlight" onfileadd="uploadDoc" as |queue|}}
          <a id="upload_file" style="font-size:14px">Upload File</a>
         {{/pl-uploader}}
    </div>
     <div class="row ">
      <button class="mybutton" type="submit" {{action 'submitdetails'}}>submit</button>
    </div> 

     </div>
    {{!-- </div> --}}
   
  </form>
   {{/if}}
   {{#if isShowbuttoninvoice}}
    <div class="row ">
      <button class="mybutton" type="submit" {{action 'approvetoinvoice'}}>Approve Invoice</button>
    </div> 
{{/if}}
 </div> 
 {{#if ShowingModalrequest}}
{{#modal-dialog close="submitdetails" targetAttachment="center" translucentOverlay=true}}
                 <h3>Invoice Submitted Sucessflly... !</h3>
                        <div class="modal-header">
                              <button type="button" class="close" {{action "okbutton" }}>ok</button>
                        </div>
 {{/modal-dialog}}
 {{/if}}
